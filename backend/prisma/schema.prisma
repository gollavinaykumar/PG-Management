generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  email      String     @unique
  name       String
  password   String
  mobile     String
  image      String?
  createdAt  DateTime   @default(now())
  isloggedIn Boolean    @default(false)
  room       Room       @relation(fields: [roomId], references: [id])
  roomId     String     @db.ObjectId
  payments   Payments[]
  role       Role       @default(User)
}

model Room {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  roomno    Int
  capacity  Int
  price     Int
  user      User[]
  issues    Issues[]
  createdAt DateTime @default(now())
}

model Payments {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @db.ObjectId
  amount     Int
  screenShot String
  createdAt  DateTime @default(now())
}

model Issues {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String   @db.ObjectId
  message   String
  status    String   @default("not solved")
  createdAt DateTime @default(now())
}

enum Role {
  Admin
  User
}
